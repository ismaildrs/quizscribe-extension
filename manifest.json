{
  "manifest_version": 3,
  "name": "QuizScribe",
  "version": "1.0",
  "description": "QuizScribe helps you redirect YouTube videos to a learning dashboard with a single click.",
  "permissions": ["tabs"],
  "host_permissions": [
    "https://www.youtube.com/watch*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icon.png",
      "48": "./icon.png",
      "128": "./icon.png"
    }
  }
}
